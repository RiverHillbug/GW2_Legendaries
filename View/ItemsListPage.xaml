<Page x:Class="GW2_Legendaries.ItemsListPage"
	  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
	  xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
	  xmlns:local="clr-namespace:GW2_Legendaries"
	  xmlns:view="clr-namespace:GW2_Legendaries.View"
	  mc:Ignorable="d" 
	  d:DesignHeight="600" d:DesignWidth="450"
	  Title="ItemsListPage">

	<Grid>
		<Image Source="/bg.jpg" VerticalAlignment="Center" HorizontalAlignment="Center" Stretch="UniformToFill"/>
		<ScrollViewer>
			<Grid>
				<ListBox x:Name="ItemsList" HorizontalAlignment="Center" Height="350" VerticalAlignment="Center" Width="232" d:ItemsSource="{d:SampleData ItemCount=5}"/>
			</Grid>
		</ScrollViewer>
	</Grid>
</Page>
